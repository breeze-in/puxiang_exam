<% content_for :title, '注册'%>
<h1>注册</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=	form_for @user, url: account_path do |f| %>
      <%=	render 'common/error_messages', object:f.object %>
        <%= f.label :username %><br>
        <%= f.text_field :username, class: 'form-control', placeholder: '请输入用户名' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: '请输入邮箱' %>

        <%= f.label :password %><br>
        <%= f.text_field :password, class: 'form-control', placeholder: '请输入密码' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '请确认密码' %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
