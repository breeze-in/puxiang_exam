<h1>创建一个用户</h1>
<%= form_for :user, url: account_path do |f| %>
    <p>
      <%= f.label :username %><br>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :password %><br>
      <%= f.text_field :password %>
    </p>

    <p>
      <%= f.label :mobile %><br>
      <%= f.text_field :mobile %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
