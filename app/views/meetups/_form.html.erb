<%= form_for @meetup do |f| %>
    <%=	render 'common/error_messages', object:f.object %>

    <div class="form-group">
      <%= f.text_field :title, class: 'form-control', placeholder: '在这里填写标题' %>
    </div>

    <div class="form-group">
      <%= f.text_area :body, class: 'form-control', placeholder: '在这里写你的内容吧～', rows: 20 %>
    </div>

    <div class="form-group">
      <%= f.submit "保存", class: "btn btn-primary col-xs-2" %>
    </div>
<% end %>